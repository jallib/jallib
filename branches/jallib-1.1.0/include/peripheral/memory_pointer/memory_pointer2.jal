--
-- Notes: This lib will not produce errors if POSTINC2 is not supported by
--        your chip. Your code should check if defined(mem_pointer2) before
--        using, otherwise use another method of doing whatever it is your
--        trying to do.
--

--------------------------------------------------------------------------------
-- Get the address of an array variable. Like WHEREIS()
-- Hopefully WHEREIS() will be upgraded in the compiler to be able to do this.
--------------------------------------------------------------------------------
if !defined(mem_whereis_array) then
   function mem_whereis_array(byte in var[]) return word is
       var word rval

       var byte rval_[2] at rval
       assembler
           bank movf var,w
           movwf rval_[0]
           movf var+1,w
           movwf rval_[1]
       end assembler

       return rval
   end function
end if

--------------------------------------------------------------------------------
-- Check if POSTINC2 exists on this chip.
--------------------------------------------------------------------------------
if defined(POSTINC2) then

   -- aliases
   alias mem_pointer2_address is FSR2
   alias mem_pointer2_low is FSR2L
   alias mem_pointer2_high is FSR2H

   if !defined(MEM_POINTER2_VAR_SIZE) then
      const MEM_POINTER2_VAR_SIZE = 1
   end if

   -- memory pointer data retreval variable
   if MEM_POINTER2_VAR_SIZE == 1 then
      alias mem_pointer2 is POSTINC2
   end if

   if MEM_POINTER2_VAR_SIZE == 2 then
      function mem_pointer2() return word is
         pragma inline
         var word data
         var byte _data[2] at data
         _data[0] = POSTINC2
         _data[1] = POSTINC2
         return data
      end function
   end if

   if MEM_POINTER2_VAR_SIZE == 4 then
      function mem_pointer2() return dword is
         pragma inline
         var dword data
         var byte _data[4] at data
         _data[0] = POSTINC2
         _data[1] = POSTINC2
         _data[2] = POSTINC2
         _data[3] = POSTINC2
         return data
      end function
   end if
   
end if
