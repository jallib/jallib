-- ----------------------------------------------------------------------------
-- toupper - convert byte to upper case
-- ----------------------------------------------------------------------------
procedure toupper(byte in out char) is

   if (char >= "a") & (char <= "z") then
      char = char - "a" + "A"
   end if

end procedure


-- ----------------------------------------------------------------------------
-- tolower - convert byte to lower case
-- ----------------------------------------------------------------------------
procedure tolower(byte in out char) is

   if (char >= "A") & (char <= "Z") then
      char = char - "A" + "a"
   end if

end procedure


