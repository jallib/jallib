procedure print_byte_binary(volatile byte out device, byte in data) is

if (print_prefix) then
device = "0"
device = "b"
end if

for 8 loop
if ((data & 0x80) != 0) then
device = "1"
else
device = "0"
end if
data = data * 2
end loop

end procedure


procedure print_nibble_binary(volatile byte out device, byte in data) is

for 4 loop
if ((data & 0x08) != 0) then
device = "1"
else
device = "0"
end if
data = data << 1
end loop

end procedure



