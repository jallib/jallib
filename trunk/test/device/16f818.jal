const PPS_GROUP        = PPS_0        -- no Peripheral Pin Selection
--
-- Free shared memory: 0x70-0x7B
--
-- ===================================================
--
--    Symbolic Fuse Definitions
-- ------------------------------
--
-- CONFIG (0x2007)
--
pragma fuse_def OSC 0x13 {                 -- Oscillator Selection bits
       RC_CLKOUT = 0x13                    -- EXTRC oscillator; CLKO function on RA6/OSC2/CLKO pin
       RC_NOCLKOUT = 0x12                  -- EXTRC oscillator; port I/O function on RA6/OSC2/CLKO pin
       INTOSC_CLKOUT = 0x11                -- INTRC oscillator; CLKO function on RA6/OSC2/CLKO pin and port I/O function on RA7/OSC1/CLKI pin
       INTOSC_NOCLKOUT = 0x10              -- INTRC oscillator; port I/O function on both RA6/OSC2/CLKO pin and RA7/OSC1/CLKI pin
       EC_NOCLKOUT = 0x3                   -- EXTCLK; port I/O function on RA6/OSC2/CLKO pin
       HS = 0x2                            -- HS oscillator
       XT = 0x1                            -- XT oscillator
       LP = 0x0                            -- LP oscillator
       }
pragma fuse_def WDT 0x4 {                  -- Watchdog Timer Enable bit
       ENABLED = 0x4                       -- WDT enabled
       DISABLED = 0x0                      -- WDT disabled
       }
pragma fuse_def PWRTE 0x8 {                -- Power-up Timer Enable bit
       DISABLED = 0x8                      -- PWRT disabled
       ENABLED = 0x0                       -- PWRT enabled
       }
pragma fuse_def MCLR 0x20 {                -- RA5/MCLR/VPP Pin Function Select bit
       EXTERNAL = 0x20                     -- RA5/MCLR/VPP pin function is MCLR
       INTERNAL = 0x0                      -- RA5/MCLR/VPP pin function is digital I/O, MCLR internally tied to VDD
       }
pragma fuse_def BROWNOUT 0x40 {            -- Brown-out Reset Enable bit
       ENABLED = 0x40                      -- BOR enabled
       DISABLED = 0x0                      -- BOR disabled
       }
pragma fuse_def LVP 0x80 {                 -- Low-Voltage Programming Enable bit
       ENABLED = 0x80                      -- RB3/PGM pin has PGM function, Low-Voltage Programming enabled
       DISABLED = 0x0                      -- RB3/PGM pin has digital I/O function, HV on MCLR must be used for programming
       }
pragma fuse_def CPD 0x100 {                -- Data EE Memory Code Protection bit
       DISABLED = 0x100                    -- Code protection off
       ENABLED = 0x0                       -- Data EE memory locations code-protected
       }
pragma fuse_def WRT 0x600 {                -- Flash Program Memory Write Enable bits
       DISABLED = 0x600                    -- Write protection off
       W512 = 0x400                        -- 0000h to 01FFh write-protected, 0200h to 03FFh may be modified by EECON control
       W1024 = 0x200                       -- 0000h to 03FFh write-protected
       }
pragma fuse_def DEBUG 0x800 {              -- In-Circuit Debugger Mode bit
       DISABLED = 0x800                    -- In-Circuit Debugger disabled, RB6 and RB7 are general purpose I/O pins
       ENABLED = 0x0                       -- In-Circuit Debugger enabled, RB6 and RB7 are dedicated to the debugger
       }
pragma fuse_def CCP1MUX 0x1000 {           -- CCP1 Pin Selection bit
       pin_B2 = 0x1000                     -- CCP1 function on RB2
       pin_B3 = 0x0                        -- CCP1 function on RB3
       }
pragma fuse_def CP 0x2000 {                -- Flash Program Memory Code Protection bit
       DISABLED = 0x2000                   -- Code protection off
       ENABLED = 0x0                       -- All memory locations code-protected
       }
