--
-- Symbolic Fuse definitions
-- -------------------------
--
-- CONFIG (0xFFF)
--
pragma fuse_def OSC 0x7 {                  -- oscillator selection bits
       LP = 0x0                            -- lp oscillator and 18 ms drt
       XT = 0x1                            -- xt oscillator and 18 ms drt
       HS = 0x2                            -- hs oscillator and 18 ms drt
       EC_NOCLKOUT = 0x3                   -- ec osc with rb4 and 1.125 ms drt
       INTOSC_NOCLKOUT = 0x4               -- intrc with rb4 and 1.125 ms drt
       INTOSC_CLKOUT = 0x5                 -- intrc with clkout and 1.125 ms drt
       RC_NOCLKOUT = 0x6                   -- extrc with rb4 and 1.125 ms drt
       RC_CLKOUT = 0x7                     -- extrc with clkout and 1.125 ms drt
       }
pragma fuse_def WDT 0x8 {                  -- watchdog timer enable bit
       ENABLED = 0x8                       -- enabled
       DISABLED = 0x0                      -- disabled
       }
pragma fuse_def CP 0x10 {                  -- code protect
       DISABLED = 0x10                     -- disabled
       ENABLED = 0x0                       -- enabled
       }
pragma fuse_def MCLR 0x20 {                -- master clear enable bit
       EXTERNAL = 0x20                     -- enabled
       INTERNAL = 0x0                      -- disabled
       }
pragma fuse_def IOSCFS 0x40 {              -- internal oscillator frequency select bit
       F8MHZ = 0x40                        -- enabled
       F4MHZ = 0x0                         -- disabled
       }
