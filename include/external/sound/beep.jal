-- Description: simple Piezo beeper routines for different sound frequencies
-- all procedures sound the beeper for 1 second
-- 
-- Notes:
-- --
-- **************************************************************************
-- **************************************************************************
-- *****                                                                *****
-- ***** In your user code you must define two output pins:             *****
-- ***** var bit beep1 is pin_xx                                         *****
-- ***** pin_xx_direction is output                                     *****
-- ***** var bit beep2 is pin_yy                                         *****
-- ***** pin_yy_direction is output                                     *****
-- *****                                                                *****
-- **************************************************************************
-- **************************************************************************
-- 

include delay

procedure beep_500hz() is
for 500 loop
   beep1 = low
   beep2 = high
   delay_10us(100)
   beep1 = high
   beep2 = low
   delay_10us(100)
end loop
end procedure

procedure beep_1khz() is
for 1_000 loop
   beep1 = low
   beep2 = high
   delay_10us(50)
   beep1 = high
   beep2 = low
   delay_10us(50)
end loop
end procedure

procedure beep_2khz() is
for 2_000 loop
   beep1 = low
   beep2 = high
   delay_10us(25)
   beep1 = high
   beep2 = low
   delay_10us(25)
end loop
end procedure

procedure beep_4khz() is
for 4_000 loop
   beep1 = low
   beep2 = high
   delay_10us(13)
   beep1 = high
   beep2 = low
   delay_10us(12)
end loop
end procedure


